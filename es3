int main() {
    int i,k,z,cont=0,cont2=0,x,y;
    char a[N],b[N];
    
    printf("Inserisci la prima stringa:\n");
    scanf("%s",a);
    printf("Inserisci la seconda stringa:\n");
    scanf("%s",b);
    
    x=strlen(a);
    y=strlen(b);
    
    for (i=0; i<x; i++) {
        if(a[i]==b[0])
        {
            z=i;
            for (k=0; k<y; k++) {
                if(a[z]==b[k]){
                    z++;
                    cont++;
                }
            }
            if(cont==y)
                cont2++;
            cont=0;
        }
    }
    printf("%s Ã¨ contenuta in %s %d volte\n",a,b,cont2);
    return 0;
}
